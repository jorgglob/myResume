<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="CardViewStyle" parent="Base.CardView" >
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">@dimen/card_view_corner_radius</item>
        <item name="cardElevation">@dimen/card_view_elevation</item>
    </style>

    <style name="SkillsCardStyle" parent="Base.CardView" >
        <item name="cardBackgroundColor">@color/colorAccent</item>
        <item name="cardCornerRadius">@dimen/skills_card_view_corner_radius</item>
        <item name="cardElevation">@dimen/skills_card_view_elevation</item>
    </style>

    <style name="ExpandedTextStyle" parent="TextAppearance.Design.CollapsingToolbar.Expanded" >
        <item name="android:textSize">@dimen/header_expanded_title_text_size</item>
    </style>

</resources>
